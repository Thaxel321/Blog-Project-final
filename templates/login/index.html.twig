{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}
{% block head %}
    <title>{% block title %}Connexion{%endblock%}</title>
{% endblock %}
{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <label for="username">Nom d'utilisateur :</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"/>

        <label for="password">Mot de passe :</label>
        <input class="form-control" type="password" id="password" name="_password"/>

        <input type="hidden" name="_target_path" value="{{ path('articles')}}"/>
        <br>
        <button class="btn-primary btn" type="submit">Connexion</button>
        <a class="btn-primary btn" href="{{path('app_register')}}">Inscription</a>
    </form>
{% endblock %}