{% extends 'base.html.twig' %}
{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1 style="text-align: center">Inscription</h1><br>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, {
            label: 'Nom d\'utilisateur :'
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe :'
        }) }}
        {{ form_row(registrationForm.save, {
            label: 'Inscription'
        }) }}
        <a class="btn-primary btn" href="{{path('app_login')}}">Vous avez déjà un compte ?</a>

    {{ form_end(registrationForm) }}
{% endblock %}
