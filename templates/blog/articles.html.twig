{% extends 'base.html.twig' %}
{% block head %}
    <title>{% block title %}Liste Articles{%endblock%}</title>
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row mb-2">
        {% for article in articles %}
            <div class="col-md-6">
                <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                    <div class="col p-4 d-flex flex-column position-static">
                        <h3 class="mb-0">{{article.title}}</h3>
                        <div class="mb-1 text-muted">{{ article.createAt | date("m/Y") }}</div>
                        <p class="card-text mb-auto">{{article.content}}</p>
                        <a href="{{path('anArticle', {'id' : article.id})}}" class="btn btn-primary">Voir l'article</a>
                    </div>
                    <div class="col-auto d-none d-lg-block">
                        {% if article.image != "" %}
                            <img src="{{ asset('uploads/images/' ~ article.image) }}" width="200px" height="250px">
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}

